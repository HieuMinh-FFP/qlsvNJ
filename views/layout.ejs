<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Quản lý sinh viên</title>
  <link rel="stylesheet" href="/vendor/bootstrap-4.5.3-dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="/vendor/fontawesome-free-5.15.1-web/css/all.min.css" />
  <link rel="stylesheet" href="/css/style.css" />
</head>

<body>
  <div class="container" style="margin-top: 20px">
    <a href="/" class="<%= module== 'student' ? 'active': ''%> btn btn-info">Students</a>
    <a href="/subject" class=" <%= module== 'subject' ? 'active': ''%> btn btn-info">Subject</a>
    <a href="/register" class=" <%= module== 'register' ? 'active': ''%> btn btn-info">Register</a>
    <div style=" margin-top: 20px">
      <div class="error bg-danger container-fluid text-center"></div>
      <div class="message bg-primary container-fluid text-center"></div>
    </div>
    <!-- // hien thi thong bao -->
    <% if(typeof message_success !=='undefined'){%>
    <div class="alert alert-success mt-3"><%= message_success %></div>
    <%}%> <% if(typeof message_error !=='undefined'){%>
    <div class="alert alert-danger mt-3"><%= message_error %></div>
    <%}%> 
    <%-body%>
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">
              Bạn muốn xóa phải không
            </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">
              Hủy
            </button>
            <a href="#" class="btn btn-primary">Xác nhận</a>
          </div>
        </div>
      </div>
    </div>
    <script src="/vendor/jquery-3.5.1.min.js"></script>
    <script src="/vendor/popper.min.js"></script>
    <script src="/vendor/bootstrap-4.5.3-dist/js/bootstrap.min.js"></script>
    <script src="/vendor/jquery-validation-1.19.5/dist/jquery.validate.min.js"></script>
    <script src="/js/script.js"></script>
  </div>
</body>

</html>